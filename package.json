{
  "name": "officer-filing-web",
  "version": "0.0.1",
  "description": "Web front end for Directors Filing service",
  "main": "app.ts",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "start": "node dist/bin/www.js",
    "chs-dev": "nodemon --legacy-watch",
    "build": "tsc && cp -r views dist/",
    "test": "jest",
    "lint": "eslint '{src,test}/**/*'",
    "lint:fix": "eslint '{src,test}/**/*' --fix",
    "sonarqube-base-branch": "sonar-scanner",
    "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=main",
    "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;",
    "coverage": "jest --coverage --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/companieshouse/officer-filing-web.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/companieshouse/officer-filing-web/issues"
  },
  "homepage": "https://github.com/companieshouse/officer-filing-web#readme",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.324",
    "@companieshouse/ch-node-utils": "^2.1.13",
    "@companieshouse/node-session-handler": "^5.2.8",
    "@companieshouse/structured-logging-node": "^2.0.6",
    "@companieshouse/web-security-node": "^4.4.14",
    "@opentelemetry/otlp-exporter-base": "^0.211.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.22.1",
    "express-validator": "^6.15.0",
    "govuk-frontend": "5.14.0",
    "js-yaml": "^4.1.1",
    "luxon": "^2.5.2",
    "nunjucks": "^3.2.4",
    "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#1.0.104",
    "tslib": "^1.14.1",
    "uuid": "^8.3.2",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^2.4.0",
    "@types/nunjucks": "^3.2.6",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "sonarqube-scanner": "3.5.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
