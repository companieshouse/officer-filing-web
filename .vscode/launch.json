{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote",
            "address": "localhost",
            "port": 9228,
            "restart": true,
            "sourceMaps": true,
            "remoteRoot": "/app/src",
            "localRoot": "${workspaceFolder}/src",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}